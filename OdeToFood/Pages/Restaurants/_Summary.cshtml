@using OdeToFood.Core
@model Restaurant

<div class="card card-default">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>

    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>

    <div class="card-footer">
        <a class="btn btn-lg btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i>Details</i>
        </a>
        <a class="btn btn-lg btn-info" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i>Edit</i>
        </a>
        <a class="btn btn-lg btn-info" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i>Delete</i>
        </a>
    </div>
</div>